{
    "compilerOptions": {
      "noImplicitAny": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve",
      "sourceMap": true,
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom"],
    },
    "include": [
      "src"
    ]
  }
  